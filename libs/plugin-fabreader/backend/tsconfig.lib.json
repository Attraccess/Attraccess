{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "importHelpers": false,
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "jest.config.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
