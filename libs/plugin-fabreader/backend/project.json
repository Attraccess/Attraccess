{
  "name": "plugin-fabreader-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/plugin-fabreader/backend/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/plugin-fabreader/backend",
        "tsConfig": "libs/plugin-fabreader/backend/tsconfig.lib.json",
        "packageJson": "libs/plugin-fabreader/backend/package.json",
        "main": "libs/plugin-fabreader/backend/src/fabreader.module.ts",
        "assets": []
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "access": "public"
      }
    },
    "build-migration-datasource": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/plugin-fabreader-datasource",
        "main": "libs/plugin-fabreader/backend/src/modules/persistence/db/datasource.ts",
        "tsConfig": "libs/plugin-fabreader/backend/tsconfig.lib.json",
        "webpackConfig": "libs/plugin-fabreader/backend/webpack.config.migrations.js"
      }
    },
    "migration-generate": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": ".",
        "commands": [
          "typeorm -d dist/libs/plugin-fabreader-datasource/main.js migration:generate"
        ]
      },
      "dependsOn": ["build-migration-datasource"]
    },
    "migrations-run": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": ".",
        "commands": [
          "typeorm -d dist/libs/plugin-fabreader-datasource/main.js migration:run"
        ]
      },
      "dependsOn": ["build-migration-datasource"]
    }
  }
}
