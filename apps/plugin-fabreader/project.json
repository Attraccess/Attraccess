{
  "name": "plugin-fabreader",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/plugin-fabreader/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/plugin-fabreader",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/plugin-fabreader/src/fabreader.module.ts",
        "tsConfig": "apps/plugin-fabreader/tsconfig.app.json",
        "assets": ["apps/plugin-fabreader/plugin.json"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "plugin-fabreader:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "plugin-fabreader:build:development"
        },
        "production": {
          "buildTarget": "plugin-fabreader:build:production"
        }
      }
    },
    "build-migration-datasource": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/plugin-fabreader-datasource",
        "main": "apps/plugin-fabreader/src/modules/persistence/db/datasource.ts",
        "tsConfig": "apps/plugin-fabreader/tsconfig.app.json",
        "webpackConfig": "apps/plugin-fabreader/webpack.config.migrations.js"
      }
    },
    "migration-generate": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": ".",
        "commands": [
          "typeorm -d dist/apps/plugin-fabreader-datasource/main.js migration:generate"
        ]
      },
      "dependsOn": ["build-migration-datasource"]
    },
    "migrations-run": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": ".",
        "commands": [
          "typeorm -d dist/apps/plugin-fabreader-datasource/main.js migration:run"
        ]
      },
      "dependsOn": ["build-migration-datasource"]
    }
  }
}
